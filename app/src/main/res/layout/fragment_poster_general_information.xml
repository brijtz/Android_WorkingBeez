<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_200"
                    android:padding="10dp">

                    <com.kofigyan.stateprogressbar.StateProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:spb_checkStateCompleted="true"
                        app:spb_currentStateDescriptionColor="#009688"
                        app:spb_currentStateNumber="one"
                        app:spb_maxStateNumber="two"
                        app:spb_stateBackgroundColor="@color/gray_500"
                        app:spb_stateDescriptionColor="@color/app_blue"
                        app:spb_stateForegroundColor="@color/app_blue"
                        app:spb_stateLineThickness="2px"
                        app:spb_stateNumberBackgroundColor="@color/app_blue"
                        app:spb_stateNumberForegroundColor="@color/gray_50" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_600"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/etPosterRegDP"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/dp"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="5dp" />

                </FrameLayout>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                app:contentPaddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegFname"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_firstname"
                            android:inputType="textEmailAddress"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegLname"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_last_name"
                            android:inputType="textEmailAddress"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegEmailId"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_email"
                            android:inputType="textEmailAddress"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegPass"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_password"
                            android:inputType="textPassword"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.app.workingbeez.widgets.DTextView
                style="@style/txt_txt_primary_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/hint_additional_details" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                app:contentPaddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegNameOfBusiness"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_name_of_business"
                            android:inputType="text"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegABN"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_abn"
                            android:inputType="text"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegAboutBusiness"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_about_you_business"
                            android:inputType="text"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegWebURL"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_website_url"
                            android:inputType="text"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/secondaryText"
                        app:hintAnimationEnabled="true">

                        <com.app.workingbeez.widgets.DEditText
                            android:id="@+id/etPosterRegLocation"
                            style="@style/txt_txt_secondary_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:ems="15"
                            android:hint="@string/hint_location"
                            android:inputType="text"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@null" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_600" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>